    <style>
        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
    <style>
        .vertical-menu {
            text-align: right;
            width: 200px;
        }

            .vertical-menu a {
                background-color: #eee;
                color: black;
                display: block;
                padding: 12px;
                text-decoration: none;
            }

                .vertical-menu a:hover {
                    background-color: #ccc;
                }

                .vertical-menu a.active {
                    background-color: #04AA6D;
                    color: white;
                }

                .vertical-menu a:focus {
                    background-color: #04AA6D;
                }
        .d-flex
        {
            direction:rtl;
        }
    </style>    
</head>
